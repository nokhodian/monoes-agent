{
  "actionType": "PROFILE_INTERACTION",
  "platform": "INSTAGRAM",
  "version": "1.0.0",
  "description": "Like or comment on Instagram posts",
  "metadata": {
    "requiresAuth": true,
    "supportsPagination": true,
    "supportsRetry": true
  },
  "inputs": {
    "required": ["maxContentCount", "searches"],
    "optional": ["commentText", "target"]
  },
  "outputs": {
    "success": ["itemsCount", "reachedIndex"],
    "failure": ["failedItems"]
  },
  "steps": [
    {
      "id": "parse_search_keyword",
      "type": "update_progress",
      "set": {
        "searchKeyword": "{{searches[0].keyword}}"
      }
    },
    {
      "id": "build_search_url",
      "type": "update_progress",
      "set": {
        "searchUrl": "https://www.instagram.com/explore/tags/{{searchKeyword}}/"
      }
    },
    {
      "id": "navigate_to_search",
      "type": "navigate",
      "url": "{{searchUrl}}",
      "waitFor": "page_load",
      "timeout": 30
    },
    {
      "id": "close_popups",
      "type": "wait",
      "duration": 2.0,
      "waitFor": "time"
    },
    {
      "id": "find_posts",
      "type": "find_element",
      "xpath": "//article//a[contains(@href, '/p/')]",
      "timeout": 15
    },
    {
      "id": "extract_post_list",
      "type": "extract_multiple",
      "xpath": "//article//a[contains(@href, '/p/')]",
      "onSuccess": {
        "action": "save_data"
      }
    },
    {
      "id": "open_post",
      "type": "navigate",
      "url": "{{post.url}}",
      "waitFor": "page_load",
      "timeout": 15
    },
    {
      "id": "determine_interaction_type",
      "type": "condition",
      "condition": "commentText != ''",
      "then": ["like_post", "comment_on_post"],
      "else": ["like_post"]
    },
    {
      "id": "like_post",
      "type": "find_element",
      "xpath": "//button[contains(@aria-label, 'Like')] | //span[contains(@aria-label, 'Like')]/parent::button",
      "timeout": 5,
      "onError": {
        "action": "skip"
      }
    },
    {
      "id": "click_like",
      "type": "click",
      "elementRef": "like_post",
      "waitFor": "like_clicked"
    },
    {
      "id": "comment_on_post",
      "type": "find_element",
      "xpath": "//textarea[@aria-label='Add a comment...'] | //div[@contenteditable='true']",
      "timeout": 5
    },
    {
      "id": "type_comment",
      "type": "type",
      "elementRef": "comment_on_post",
      "text": "{{commentText}}",
      "humanLike": true
    },
    {
      "id": "find_post_comment_button",
      "type": "find_element",
      "xpath": "//button[contains(text(), 'Post')] | //button[@type='submit']",
      "timeout": 10
    },
    {
      "id": "click_post_comment",
      "type": "click",
      "elementRef": "find_post_comment_button",
      "waitFor": "comment_posted"
    },
    {
      "id": "check_more_content",
      "type": "condition",
      "condition": "reachedIndex < maxContentCount",
      "then": ["navigate_back", "scroll_for_more", "extract_post_list", "open_post", "check_more_content"],
      "else": []
    },
    {
      "id": "navigate_back",
      "type": "navigate",
      "url": "{{searchUrl}}",
      "waitFor": "page_load"
    },
    {
      "id": "scroll_for_more",
      "type": "scroll",
      "elementRef": "find_posts",
      "waitFor": "time"
    }
  ],
  "loops": [
    {
      "id": "process_content",
      "iterator": "extract_post_list",
      "indexVar": "reachedIndex",
      "steps": [
        "open_post",
        "determine_interaction_type"
      ],
      "onComplete": "update_action_state"
    }
  ],
  "errorHandling": {
    "globalRetries": 3,
    "retryDelay": 2000,
    "onFinalFailure": "log_and_continue"
  }
}




