{
  "actionType": "PROFILE_SEARCH",
  "platform": "X",
  "version": "1.0.0",
  "description": "Extract profile information from X (Twitter) profiles",
  "metadata": {
    "requiresAuth": true,
    "supportsPagination": false,
    "supportsRetry": true
  },
  "inputs": {
    "required": ["selectedListItems"],
    "optional": []
  },
  "outputs": {
    "success": ["profilesCount", "reachedIndex"],
    "failure": ["failedProfileSearches"]
  },
  "steps": [
    {
      "id": "navigate_to_profile",
      "type": "navigate",
      "url": "{{item.url}}",
      "waitFor": "page_load",
      "timeout": 30,
      "onError": {
        "action": "retry",
        "maxRetries": 3,
        "onFailure": "mark_failed"
      }
    },
    {
      "id": "wait_for_profile_load",
      "type": "wait",
      "duration": 3.0,
      "waitFor": "time"
    },
    {
      "id": "extract_username",
      "type": "find_element",
      "configKey": "username",
      "timeout": 10
    },
    {
      "id": "get_username_text",
      "type": "extract_text",
      "elementRef": "extract_username"
    },
    {
      "id": "extract_full_name",
      "type": "find_element",
      "configKey": "full_name",
      "timeout": 10
    },
    {
      "id": "get_full_name_text",
      "type": "extract_text",
      "elementRef": "extract_full_name"
    },
    {
      "id": "extract_bio",
      "type": "find_element",
      "configKey": "bio",
      "timeout": 5,
      "onError": {
        "action": "skip"
      }
    },
    {
      "id": "get_bio_text",
      "type": "extract_text",
      "elementRef": "extract_bio"
    },
    {
      "id": "extract_followers_count",
      "type": "find_element",
      "configKey": "followers_count",
      "timeout": 5
    },
    {
      "id": "get_followers_count_text",
      "type": "extract_text",
      "elementRef": "extract_followers_count"
    },
    {
      "id": "extract_following_count",
      "type": "find_element",
      "configKey": "following_count",
      "timeout": 5
    },
    {
      "id": "get_following_count_text",
      "type": "extract_text",
      "elementRef": "extract_following_count"
    },
    {
      "id": "extract_profile_image",
      "type": "find_element",
      "configKey": "profile_image",
      "timeout": 5
    },
    {
      "id": "get_profile_image_url",
      "type": "extract_attribute",
      "elementRef": "extract_profile_image",
      "attribute": "src"
    },
    {
      "id": "save_profile_data",
      "type": "save_data",
      "onSuccess": {
        "action": "update_progress",
        "increment": "reachedIndex"
      }
    }
  ],
  "loops": [
    {
      "id": "process_profiles",
      "iterator": "selectedListItems",
      "indexVar": "reachedIndex",
      "steps": [
        "navigate_to_profile",
        "wait_for_profile_load",
        "extract_username",
        "get_username_text",
        "extract_full_name",
        "get_full_name_text",
        "extract_bio",
        "get_bio_text",
        "extract_followers_count",
        "get_followers_count_text",
        "extract_following_count",
        "get_following_count_text",
        "extract_profile_image",
        "get_profile_image_url",
        "save_profile_data"
      ],
      "onComplete": "update_action_state"
    }
  ],
  "errorHandling": {
    "globalRetries": 3,
    "retryDelay": 2000,
    "onFinalFailure": "log_and_continue"
  }
}




